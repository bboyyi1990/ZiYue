<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:id="@+id/theme_recyclerView_LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/collect_cardView_margin">

    <android.support.v7.widget.CardView
        android:id="@+id/recyclerView_theme_CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/collect_cardView_margin"
        card_view:cardElevation="@dimen/collect_cardView_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/theme_recyclerView_cardView_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/theme_recyclerView_cardView_picurl"
                android:layout_marginLeft="@dimen/title_text_margin"
                android:layout_toRightOf="@+id/theme_recyclerView_cardView_picurl"
                android:text="姓名"
                android:textColor="@color/news_title_text_color"
                android:textSize="@dimen/content_size"
                />

            <TextView
                android:id="@+id/no_la"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/theme_recyclerView_cardView_picurl"
                android:layout_marginLeft="@dimen/title_text_margin"
                android:layout_toRightOf="@+id/theme_recyclerView_cardView_name_tv"
                android:text="/"
                android:textColor="@color/news_title_text_color"
                android:textSize="@dimen/content_size"
                />

            <TextView
                android:id="@+id/theme_recyclerView_cardView_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/theme_recyclerView_cardView_name_tv"
                android:layout_marginLeft="@dimen/title_text_margin"
                android:layout_toRightOf="@+id/no_la"
                android:text="消防知识宣传员"
                android:textColor="@color/news_title_text_color"
                android:textSize="@dimen/content_size"
                />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/theme_recyclerView_cardView_headPicurl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/theme_recyclerView_simple_height"
                android:layout_below="@+id/theme_recyclerView_cardView_title_tv"
                android:layout_margin="@dimen/collect_cardView_margin"
                fresco:placeholderImage="@mipmap/eee" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/theme_recyclerView_cardView_picurl"
                android:layout_width="@dimen/theme_recyclerView_simple_width"
                android:layout_height="@dimen/theme_recyclerView_simple_width"
                android:layout_marginLeft="@dimen/theme_recyclerView_simple_margin"
                android:layout_marginTop="@dimen/collect_cardView_margin"
                fresco:roundBottomLeft="true"
                fresco:roundBottomRight="true"
                fresco:roundedCornerRadius="25dp"
                fresco:roundingBorderWidth="2dp"

                />

            <TextView
                android:id="@+id/theme_recyclerView_cardView_alias_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/theme_recyclerView_cardView_headPicurl"
                android:layout_alignRight="@+id/theme_recyclerView_cardView_headPicurl"
                android:layout_below="@+id/theme_recyclerView_cardView_headPicurl"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="标题标题标题标题标题标题标题标题标题标题标题标题"
                android:textColor="@color/news_title_text_color"
                android:textSize="@dimen/title_size" />

            <TextView
                android:id="@+id/theme_recyclerView_cardView_classification_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/theme_recyclerView_cardView_headPicurl"
                android:layout_below="@+id/theme_recyclerView_cardView_alias_tv"
                android:layout_marginTop="@dimen/thtme_recyclerView_textView_margin"
                android:text="社会"
                android:textColor="#01c0ff"
                android:textSize="@dimen/theme_bottom_text_size" />

            <TextView
                android:id="@+id/talk_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/theme_recyclerView_cardView_classification_tv"
                android:layout_marginLeft="@dimen/title_text_margin"
                android:layout_toRightOf="@+id/theme_recyclerView_cardView_classification_tv"
                android:text="|"
                android:textColor="@color/news_content_color"
                android:textSize="@dimen/theme_bottom_text_size" />

            <TextView
                android:id="@+id/theme_recyclerView_cardView_concernCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/theme_recyclerView_cardView_classification_tv"
                android:layout_marginLeft="@dimen/title_text_margin"
                android:layout_toRightOf="@+id/talk_line"
                android:text="2222关注"
                android:textColor="@color/news_content_color"
                android:textSize="@dimen/theme_bottom_text_size" />

            <TextView
                android:id="@+id/talk_line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/theme_recyclerView_cardView_concernCount"
                android:layout_marginLeft="@dimen/title_text_margin"
                android:layout_toRightOf="@+id/theme_recyclerView_cardView_concernCount"
                android:text="|"
                android:textColor="@color/news_content_color"
                android:textSize="@dimen/theme_bottom_text_size" />

            <TextView
                android:id="@+id/theme_recyclerView_cardView_questionCount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/theme_recyclerView_cardView_concernCount"
                android:layout_marginLeft="@dimen/title_text_margin"
                android:layout_toRightOf="@+id/talk_line2"
                android:text="100提问"
                android:textColor="@color/news_content_color"
                android:textSize="@dimen/theme_bottom_text_size" />

            <!--<Button-->
                <!--android:id="@+id/theme_recyclerView_cardView_add_button"-->
                <!--android:layout_width="@dimen/theme_recyclerView_buttom_width"-->
                <!--android:layout_height="@dimen/theme_recyclerView_button_height"-->
                <!--android:layout_alignRight="@+id/theme_recyclerView_cardView_alias_tv"-->
                <!--android:layout_below="@+id/theme_recyclerView_cardView_alias_tv"-->
                <!--android:layout_margin="@dimen/title_text_margin"-->
                <!--android:background="@drawable/theme_button_focus_shape"-->
                <!--android:text="+ 关注"-->
                <!--android:textColor="@color/title_color"-->
                <!--android:textSize="@dimen/content_size"-->
                <!--/>-->
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>