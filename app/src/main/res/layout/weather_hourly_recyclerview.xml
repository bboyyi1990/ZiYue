<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/weather_hourly_recyclerView_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00"
        android:textSize="@dimen/weather_hourly_recyclerView_TextView_size" />

    <TextView
        android:id="@+id/weather_hourly_recyclerView_temp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/theme_bottom_text_size"
        android:text="15°"
        android:textSize="@dimen/weather_hourly_recyclerView_TextView_size" />

    <TextView
        android:id="@+id/weather_hourly_recyclerView_dir_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="西北"
        android:textSize="@dimen/weather_hourly_recyclerView_TextView_size" />

    <TextView
        android:id="@+id/weather_hourly_recyclerView_speed_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/theme_bottom_text_size"
        android:text="风速5"
        android:textSize="@dimen/weather_hourly_recyclerView_TextView_size" />
</LinearLayout>