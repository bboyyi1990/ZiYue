<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/news_listView_simple"
            android:layout_width="@dimen/news_listView_simple_size"
            android:layout_height="@dimen/news_listView_simple_size"
            android:layout_margin="@dimen/title_text_margin" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/news_listview_TitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/title_text_margin"
            android:gravity="center"
            android:maxLines="1"
            android:text="标题"
            android:textColor="@color/news_title_text_color"
            android:textSize="@dimen/title_size" />
        />

        <TextView
            android:id="@+id/news_listview_contentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/title_text_margin"
            android:gravity="center"
            android:maxLines="2"
            android:text="内容"
            android:textColor="@color/news_content_color"
            android:textSize="@dimen/content_size" />

    </LinearLayout>


</LinearLayout>