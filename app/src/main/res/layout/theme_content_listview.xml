<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/theme_bottom_text_size"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/theme_content_listView_relativeLayout_margin">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_theme_content_userHeadPicUrl"
                android:layout_width="@dimen/theme_content_listView_simple_size"
                android:layout_height="@dimen/theme_content_listView_simple_size"
                app:roundAsCircle="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_theme_content_userHeadPicUrl"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_topic_content_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网易网友" />

                <TextView
                    android:id="@+id/item_theme_content_question_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有关于这个话题也很想了解多一些、反省自身存在的问题、小便你好"
                    android:textSize="@dimen/theme_content_listView_textView_size" />
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/theme_content_listView_relativeLayout_margin">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_theme_content_answerHeadPicUrl"
                android:layout_width="@dimen/theme_content_listView_simple_size"
                android:layout_height="@dimen/theme_content_listView_simple_size"
                app:roundAsCircle="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_theme_content_answerHeadPicUrl"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_theme_content_answer_usename_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网易网友" />

                <TextView
                    android:id="@+id/item_theme_content_answer_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有关于这个话题也很想了解多一些、反省自身存在的问题、小便你好"
                    android:textSize="@dimen/theme_content_textView_size" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/search_line_view_height"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/theme_content_listView_View_margin"
        android:layout_marginRight="@dimen/theme_content_listView_View_margin"
        android:layout_marginTop="@dimen/title_text_margin"
        android:background="#8c8c8c" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/theme_content_listView_relativeLayout_margin"
        android:layout_marginRight="@dimen/theme_content_listView_relativeLayout_margin"
        android:layout_marginTop="@dimen/title_text_margin"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--<TextView-->
                <!--android:id="@+id/item_theme_content_cTime"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:text="1小时前"-->
                <!--android:textSize="@dimen/theme_content_textView_size" />-->

            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_marginRight="5dp"-->
                <!--android:src="@mipmap/jinbi" />-->
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
